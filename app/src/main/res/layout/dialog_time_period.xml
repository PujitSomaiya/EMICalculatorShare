<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spnDate"
        android:layout_width="@dimen/_500sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/tvDateFormat"
        android:layout_toRightOf="@+id/tvDateFormat"
        android:text="@string/end_date"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDateFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/date_format"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStartDate"
        android:layout_width="@dimen/_500sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateFormat"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tvStart"
        android:layout_toRightOf="@+id/tvStart" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateFormat"
        android:layout_alignStart="@+id/tvDateFormat"
        android:layout_alignLeft="@+id/tvDateFormat"
        android:layout_marginTop="23dp"
        android:text="@string/start_date"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEndDate"
        android:layout_width="@dimen/_500sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStart"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tvEnd"
        android:layout_toRightOf="@+id/tvEnd"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStart"
        android:layout_alignStart="@+id/tvDateFormat"
        android:layout_alignLeft="@+id/tvDateFormat"
        android:layout_marginTop="23dp"
        android:text="@string/end_date"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp" />


</RelativeLayout>
